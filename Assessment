package com.cogent.assessment;

public class EmployeeManagement {

	void addEmployee() {
		System.out.println("add Employee to payroll");
	}
	static void dispRecords() {
		System.out.println("display Employee payroll Records");
	}
	void deleteEmployee() {
		System.out.println("delete Employee from payroll");
	}
	EmployeeManagement() {
		System.out.println("");
	}
public static void main(String[] args) {
	EmployeeManagement em= new EmployeeManagement();
	em.addEmployee();
	em.dispRecords();
	em.deleteEmployee();
}add Employee to payroll
display Employee payroll Records
delete Employee from payroll
}
