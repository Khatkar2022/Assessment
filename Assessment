package com.cogent.assessment;

public class SchoolRecords {
	String name;
	String Id;
	String Address;
	void addRecords(){
		System.out.println("add all records of schools");
	}
	void dispRecords() {
		System.out.println("display all Records");
	}
	public static void main(String[] args) {
		SchoolRecords sr= new SchoolRecords();
		sr.dispRecords();
		sr.addRecords();		
	}
}display all Records
add all records of schools

